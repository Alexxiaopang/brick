<resources>
    <declare-styleable name="StatusLayout">
        <attr name="status" format="enum">
            <enum name="empty" value="0" />
            <enum name="loading" value="1" />
            <enum name="error" value="2" />
            <enum name="success" value="3" />
        </attr>
        <attr name="loadingTextView" format="reference" />
        <attr name="errorTextView" format="reference" />
        <attr name="emptyTextView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="animationEnabled" format="boolean" />
        <attr name="enterAnimation" format="reference" />
        <attr name="exitAnimation" format="reference" />
    </declare-styleable>
</resources>
